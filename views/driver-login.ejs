<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Driver Registration & Login - Book My Ambulance (BMA)</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex justify-center items-center h-screen">

    <!-- Container for Login/Register Form -->
    <div class="bg-white shadow-lg rounded-lg w-full max-w-lg p-8">
        <h2 class="text-center text-2xl font-semibold mb-4">Driver Portal</h2>
        <!-- Tabs -->
        <div class="flex justify-between mb-8">
            <button id="login-tab" class="w-1/2 text-center py-4 text-2xl font-bold border-b-4 border-blue-500 focus:outline-none">
                Login
            </button>
            <button id="register-tab" class="w-1/2 text-center py-4 text-2xl font-bold border-b-4 border-gray-200 focus:outline-none">
                Register
            </button>
        </div>

        <!-- Login Form -->
        <div id="login-form">
            <h2 class="text-3xl font-bold mb-8 text-center">Login to your account</h2>
            <form action="/driver/driver-login" method="POST">
                <div class="mb-6">
                    <label for="login-email" class="block mb-3 text-lg text-gray-600">Email</label>
                    <input type="email" name="email" id="login-email" class="w-full p-4 border border-gray-300 rounded-lg text-lg" placeholder="Enter your email" required>
                </div>
                <div class="mb-8">
                    <label for="login-password" class="block mb-3 text-lg text-gray-600">Password</label>
                    <input type="password" name="password" id="login-password" class="w-full p-4 border border-gray-300 rounded-lg text-lg" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="w-full bg-blue-500 text-white p-4 rounded-lg text-xl hover:bg-blue-600">
                    Login
                </button>
            </form>
            <p class="text-center text-lg text-gray-500 mt-8">Don't have an account? <button id="switch-to-register" class="text-blue-500 hover:underline">Register here</button></p>
        </div>

        <!-- Register Form (Initially Hidden) -->
        <div id="register-form" class="hidden">
            <h2 class="text-3xl font-bold mb-8 text-center">Create a new account</h2>
            <form action="driver/driver-register" method="POST" enctype="multipart/form-data">
                <!-- Full Name -->
                <div class="mb-6">
                    <label for="register-name" class="block mb-3 text-lg text-gray-600">Full Name</label>
                    <input type="text" name="name" id="register-name" class="w-full p-4 border border-gray-300 rounded-lg text-lg" placeholder="Enter your full name" required>
                </div>
                <!-- Email -->
                <div class="mb-6">
                    <label for="register-email" class="block mb-3 text-lg text-gray-600">Email</label>
                    <input type="email" name="email" id="register-email" class="w-full p-4 border border-gray-300 rounded-lg text-lg" placeholder="Enter your email" required>
                </div>
                <!-- Contact Number -->
                <div class="mb-6">
                    <label for="register-contact" class="block mb-3 text-lg text-gray-600">Contact Number</label>
                    <input type="tel" name="contactNumber" id="register-contact" class="w-full p-4 border border-gray-300 rounded-lg text-lg" placeholder="Enter your contact number" required>
                </div>
                <!-- Age -->
                <div class="mb-6">
                    <label for="register-age" class="block mb-3 text-lg text-gray-600">Age</label>
                    <input type="number" name="age" id="register-age" class="w-full p-4 border border-gray-300 rounded-lg text-lg" min="18" placeholder="Enter your age" required>
                </div>
                <!-- Password -->
                <div class="mb-6">
                    <label for="register-password" class="block mb-3 text-lg text-gray-600">Password</label>
                    <input type="password" name="password" id="register-password" class="w-full p-4 border border-gray-300 rounded-lg text-lg" placeholder="Enter your password" required>
                </div>
                <!-- Upload Driving License -->
                <div class="mb-6">
                    <label for="register-dl" class="block mb-3 text-lg text-gray-600">Upload Driving License (DL)</label>
                    <input type="file" name="drivingLicensePhoto" id="register-dl" class="w-full p-4 border border-gray-300 rounded-lg text-lg" accept="image/*,.pdf" required>
                </div>
                <button type="submit" class="w-full bg-green-500 text-white p-4 rounded-lg text-xl hover:bg-green-600">
                    Register
                </button>
            </form>
            <p class="text-center text-lg text-gray-500 mt-8">Already have an account? <button id="switch-to-login" class="text-blue-500 hover:underline">Login here</button></p>
        </div>
    </div>

    <!-- Script to Toggle Between Login and Register Forms -->
    <script>
        const loginTab = document.getElementById('login-tab');
        const registerTab = document.getElementById('register-tab');
        const loginForm = document.getElementById('login-form');
        const registerForm = document.getElementById('register-form');
        const switchToRegister = document.getElementById('switch-to-register');
        const switchToLogin = document.getElementById('switch-to-login');

        loginTab.addEventListener('click', () => {
            loginForm.classList.remove('hidden');
            registerForm.classList.add('hidden');
            loginTab.classList.add('border-blue-500');
            registerTab.classList.remove('border-blue-500');
        });

        registerTab.addEventListener('click', () => {
            loginForm.classList.add('hidden');
            registerForm.classList.remove('hidden');
            registerTab.classList.add('border-blue-500');
            loginTab.classList.remove('border-blue-500');
        });

        switchToRegister.addEventListener('click', () => {
            loginForm.classList.add('hidden');
            registerForm.classList.remove('hidden');
            registerTab.classList.add('border-blue-500');
            loginTab.classList.remove('border-blue-500');
        });

        switchToLogin.addEventListener('click', () => {
            loginForm.classList.remove('hidden');
            registerForm.classList.add('hidden');
            loginTab.classList.add('border-blue-500');
            registerTab.classList.remove('border-blue-500');
        });
    </script>
</body>
</html>
