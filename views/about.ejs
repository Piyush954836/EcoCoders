            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden bg-white shadow-lg">
            <a href="/" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Home</a>
